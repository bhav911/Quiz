@model QuizComputation_490_Model.CustomModels.ResultModel

<script>
    $('#see-answer-btn').on('click', function () {
        SeeAnswer(@Model.quizID)
    })
</script>
@{
    if (TempData["success"] != null && TempData["success"] != "")
    {
        <script>
                toastr.success('@TempData["success"]');
        </script>
    }
    if (TempData["error"] != null && TempData["error"] != "")
    {
        <script>
                toastr.error('@TempData["error"]')
        </script>
    }
}

<h2 class="text-center mb-5">Result</h2>

<div class="d-flex justify-content-center">
    <div class="fs-4">
        <p>Correct Answer: <span class="fw-bold">@(Model.score/Model.TotalQuestions)/@Model.TotalQuestions</span></p>

        <p>Your Score: <span class="fw-bold">@Model.score</span></p>

        @{
            double passingScore = (Model.TotalQuestions * 5) * 0.3;
            if (Model.score > passingScore)
            {
                <p>Status: <span class="text-success fw-bold">PASS</span></p>
            }
            else
            {
                <p>Status: <span class="text-danger fw-bold">FAIL</span></p>
            }
        }
    </div>
</div>

<div class="d-flex justify-content-center gap-2 mt-5">
    <button class="btn btn-info" id="see-answer-btn">See Answers</button>
    @Html.ActionLink("Back To Home", "GetAllQuizes", "User", null, new { @class = "btn btn-secondary" })
</div>
