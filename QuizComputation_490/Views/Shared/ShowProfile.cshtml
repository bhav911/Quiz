@model QuizComputation_490_Model.CustomModels.NewRegistration

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex flex-column gap-4">
    @{
        if (Model.Userrole == "User")
        {
            <div class="d-flex justify-content-end">
                <button class="btn btn-danger" id="delete-profile">Delete Account</button>
                @Html.ActionLink("Confirm Delete?", "DeleteProfile", "User", new { @userID = Model.UserID }, new { @class = "btn btn-dark border border-2 border-danger d-none", @id = "confirm-delete" })
            </div>
        }
    }
    <div class="border border-black p-5">
        <div class="d-flex justify-content-center">
            @{
                if (Model.profile == null)
                {
                    <img class="rounded-circle border border-black img-fluid" style="height: 150px; width: 150px; background-image: url(https://freesvg.org/img/abstract-user-flat-4.png); background-size:cover" />
                }
                else
                {
                    <img class="rounded-circle border border-black img-fluid" style="height: 150px; width: 150px; background-image: url('data:image;base64,@Model.profile'); background-size: cover" />
                }
            }
        </div>
        <h3 class="mb-4">Your Details:</h3>
        <div>
            <p>Userame: <span class="fw-bold">@Model.Username</span></p>
            <hr />
        </div>
        <div>
            <p>Email: <span class="fw-bold">@Model.Email</span></p>
            <hr />
        </div>
        <div>
            <p>Password: <span class="fw-bold">@Model.Password</span></p>
            <hr />
        </div>
    </div>




    @{
        if (Model.Userrole == "User")
        {
            <div class="border border-black p-5 mt-5">
                <h3 class="mb-4">Your Documents:</h3>
                <div class="row justify-content-between">
                    <div class="border border-black d-flex align-items-center justify-content-between p-3 col-3">
                        <p class="fw-bold mb-0">Aadhar Card:</p>
                        <div>
                            @{
                                if (Model.aadharCard != null)
                                {
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#aadharModal">View</button>
                                }
                                else
                                {
                                    <p class="text-danger">Please upload your documents!</p>
                                }
                            }
                        </div>
                    </div>
                    <div class="border border-black d-flex align-items-center justify-content-between p-3 col-3">
                        <p class="fw-bold mb-0">12th Marksheet:</p>
                        <div>
                            @{
                                if (Model.Marksheet12 != null)
                                {
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#marksheet12Modal">View</button>
                                }
                                else
                                {
                                    <p class="text-danger">Please upload your documents!</p>
                                }
                            }
                        </div>
                    </div>
                    <div class="border border-black d-flex align-items-center justify-content-between p-3 col-3">
                        <p class="fw-bold mb-0">10th Marksheet:</p>
                        <div>
                            @{
                                if (Model.Marksheet10 != null)
                                {
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#marksheet10Modal">View</button>
                                }
                                else
                                {
                                    <p class="text-danger">Please upload your documents!</p>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>


            <div class="modal fade" id="aadharModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Aadhar Card</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <embed type="application/pdf" src="data:application/pdf;base64,@Model.aadharCard" style="width: 100%; height: 600px; " />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="marksheet12Modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">12 Marksheet</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <img src="data:image;base64,@Model.Marksheet12" style="width: 100%; height: 600px; " />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="marksheet10Modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">10 Marksheet</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <img src="data:image;base64,@Model.Marksheet10" style=" width: 100%; height: 600px;" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <div class="d-flex justify-content-center gap-2">
        @{
            if (Model.Userrole.Equals("Admin"))
            {
                @Html.ActionLink("Edit Profile", "EditProfile", "Admin", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Home", "GetAllQuiz", null, new { @class = "btn btn-secondary" })
            }
            else if (Model.Userrole.Equals("User"))
            {
                @Html.ActionLink("Edit Profile", "EditProfile", "User", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Home", "GetAllQuizes", null, new { @class = "btn btn-secondary" })
            }
        }
    </div>
</div>

<script>
    $('#delete-profile').on('click', function () {
        $(this).addClass("d-none");
        $('#confirm-delete').removeClass("d-none");
    })

    $('body').on('click', function (event) {
        debugger
        let tar = event.target;
        if ($(tar).attr('id') == "delete-profile")
            return;
        $('#delete-profile').removeClass("d-none");
        $('#confirm-delete').addClass("d-none");
    })
</script>