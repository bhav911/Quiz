@model QuizComputation_490_Model.CustomModels.NewRegistration

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex flex-column gap-4">
    <div class="d-flex justify-content-center">
        @{
            if (Model.profile == null)
            {
                <img class="rounded-circle border border-black img-fluid" style="height: 150px; width: 150px; background-image: url(https://freesvg.org/img/abstract-user-flat-4.png); background-size:cover" />
            }
            else
            {
                <img class="rounded-circle border border-black img-fluid" style="height: 150px; width: 150px; background-image: url('data:image;base64,@Model.profile'); background-size: cover" />
            }
        }
    </div>
    <div class="border p-5">
        <h3 class="mb-5">Your Details:</h3>
        <div>
            <p>Userame: <span class="fw-bold">@Model.Username</span></p>
            <hr />
        </div>
        <div>
            <p>Email: <span class="fw-bold">@Model.Email</span></p>
            <hr />
        </div>
        <div>
            <p>Password: <span class="fw-bold">@Model.Password</span></p>
            <hr />
        </div>
    </div>
    
    <div class="d-flex justify-content-center gap-2">
        @{
            if (Model.Userrole.Equals("Admin"))
            {
                @Html.ActionLink("Edit Profile", "EditProfile", "Admin", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Home", "GetAllQuiz", null, new { @class = "btn btn-secondary" })
            }
            else if (Model.Userrole.Equals("User"))
            {
                @Html.ActionLink("Edit Profile", "EditProfile", "User", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Home", "GetAllQuizes", null, new { @class = "btn btn-secondary" })
            }
        }
    </div>
</div>
